
@Utils.check_Permissions( "Odontogram" )

<head>
    <link rel="stylesheet" href="~/Content/plugins/daterangepicker/daterangepicker.css">
    <!-- bootstrap datepicker -->
    <link rel="stylesheet" href="~/Content/plugins/datepicker/datepicker3.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/Content/plugins/iCheck/all.css">
    <!-- Bootstrap Color Picker -->
    <link rel="stylesheet" href="~/Content/plugins/colorpicker/bootstrap-colorpicker.min.css">
    <!-- Bootstrap time Picker -->
    <link rel="stylesheet" href="~/Content/plugins/timepicker/bootstrap-timepicker.min.css">

    <link rel="stylesheet" href="~/Content/plugins/select2/select2.min.css">
</head>

<body class="hold-transition skin-green sidebar-mini"
      ng-controller="odontogramCtrl" ng-init="init()" ng-keyup="keyPress($event)">
    
    <section class="content-header">
        <h1>
            Advanced Form Elements
            <small>Preview</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Forms</a></li>
            <li class="active">Advanced Elements</li>
        </ol>
    </section>

    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <h3 class="box-title">Odontograma</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="panel-body">
                    <span ng-repeat="x in upperTeeth">
                        <my-tooth info=x action-fn="actionFn(id_tooth, type)" c=array>
                        </my-tooth>
                    </span>

                    <div class="row">
                        <div class="col-md-2">
                            @*<select ng-model="selectedCar" ng-options="y.brand for (x, y) in cars"></select>*@

                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-lg-1" ng-repeat="x in upperTemporalTeeth">
                                    <my-tooth info="x" action-fn="actionFn(id_tooth, type)">
                                    </my-tooth>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">

                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-8">
                            <span ng-repeat="x in lowerTemporalTeeth">
                                <my-tooth info="x" action-fn="actionFn(id_tooth, type)">
                                </my-tooth>
                            </span>
                        </div>
                        <div class="col-md-2">

                        </div>
                    </div>

                    <span ng-repeat="x in lowerTeeth">
                        <my-tooth info="x" action-fn="actionFn(id_tooth, type)">
                        </my-tooth>
                    </span>
                    <br />
                    <br />
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                Visit <a href="https://select2.github.io/">Select2 documentation</a> for more examples and information about
                the plugin.
            </div>
        </div>
        </section>
</body>