@using DentalSoft.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<body background="~/Images/fondo3.jpg"></body>



<div class="container" >
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body " >
                   @using ( Html.BeginForm( "Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post ) ) {
                    @Html.AntiForgeryToken( )
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-8">
                            <img height="190" src="~/Images/loginImage2.jpg">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <hr />
                    <form>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-1">

                                </div>
                                @Html.LabelFor( m => m.Email, new { @class = "col-md-2 control-label" } )
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    
                                </div>
                                <div class="col-md-10">
                                    @Html.TextBoxFor( m => m.Email, new { @class = "form-control" } )
                                    @Html.ValidationMessageFor( m => m.Email, "", new { @class = "text-danger" } )
                                </div>
                                <div class="col-md-1">

                                </div>
                           </div>            
        
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-1">

                                </div>
                                @Html.LabelFor( m => m.Password, new { @class = "col-md-2 control-label" } )
                            </div>
                            <div class="row">
                                <div class="col-md-1">

                                </div>
                                <div class="col-md-10">
                                    
                                        @Html.PasswordFor( m => m.Password, new { @class = "form-control" } )
                                        @Html.ValidationMessageFor( m => m.Password, "", new { @class = "text-danger" } )
                                    
                                </div>
                                <div class="col-md-1">

                                </div>
                           </div>                       
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-1"></div>
                                @Html.LabelFor( m => m.RememberMe, new { @class = "col-md-2 control-label" } )
                                <div class="col-md-1"></div>
                                <div class="col-md-7">
                                    @Html.CheckBoxFor( m => m.RememberMe )
                                    @Html.ValidationMessageFor( m => m.RememberMe, "", new { @class = "text-danger" } )
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>
  

                        
                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <button type="submit" value="Ingresar"class="btn btn-primary">Ingresar</button>
                            </div>
                          
                            <div class="col-md-1"></div>
                        </div>
                    </form>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>


</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}